[Unit]
Description=code-server (IIAB)
After=network.target

[Service]
Type=simple
User={{ code_server_user }}
Group={{ code_server_user }}
Environment=PASSWORD={{ code_server_password }}
ExecStart=/usr/local/bin/code-server --bind-addr 127.0.0.1:{{ code_server_port }} --auth password {{ code_server_install_dir }}
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.targethots